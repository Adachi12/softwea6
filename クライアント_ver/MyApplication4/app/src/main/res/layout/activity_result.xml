<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    tools:context=".ResultActivity"
    >

    <TextView
        android:id="@+id/Zentai_Adachi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B4B4B4"
        android:gravity="center_horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView android:id="@+id/DisplayResult_Adachi"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:text="結果表示"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />


    <!-- 運動時間 -->

    <TextView
        android:id="@+id/edit_exerciseTime_Adachi"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="208dp"
        android:ems="2"
        android:inputType="number"

        app:layout_constraintBottom_toBottomOf="@+id/exerciseTime_Adachi"
        app:layout_constraintEnd_toEndOf="@+id/exerciseTime_Adachi"
        app:layout_constraintTop_toTopOf="@+id/exerciseTime_Adachi"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/edit_exerciseTime_Adachi2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="152dp"
        android:ems="2"
        android:inputType="number"

        app:layout_constraintBottom_toBottomOf="@+id/exerciseTime_Adachi"
        app:layout_constraintEnd_toEndOf="@+id/exerciseTime_Adachi"
        app:layout_constraintTop_toTopOf="@+id/exerciseTime_Adachi"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/edit_exerciseTime_Adachi3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="92dp"
        android:ems="2"
        android:inputType="number"

        app:layout_constraintBottom_toBottomOf="@+id/exerciseTime_Adachi"
        app:layout_constraintEnd_toEndOf="@+id/exerciseTime_Adachi"
        app:layout_constraintTop_toTopOf="@+id/exerciseTime_Adachi"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/UserHeight_Adachi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:text="走行距離:                                      km"
        android:textSize="25dp"
        android:gravity="center_vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/exerciseTime_Adachi"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"

        android:text="運動時間:                :         :     "
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298" />

    <TextView
        android:id="@+id/AveSpeed_Adachi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:text="平均速度:                                         km/h"

        android:textSize="25dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428" />

    <TextView
        android:id="@+id/UserGoalPeriod_Adachi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:text="消費カロリー:                      kcal"
        android:textSize="25dp"
        android:gravity="center_vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.546" />

    <TextView
        android:id="@+id/UserGoalMade_Adachi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"

        android:text="目標まで:                          kg"
        android:textSize="25dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668" />


    <TextView
        android:id="@+id/edit_AveSpeed_Adachi"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginEnd="80dp"
        android:gravity="center_vertical"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="@+id/AveSpeed_Adachi"
        app:layout_constraintEnd_toEndOf="@+id/AveSpeed_Adachi"
        app:layout_constraintTop_toTopOf="@+id/AveSpeed_Adachi"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/edit_UserHeight_Adachi"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginEnd="96dp"
        android:gravity="center_vertical"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="@+id/UserHeight_Adachi"
        app:layout_constraintEnd_toEndOf="@+id/UserHeight_Adachi"
        app:layout_constraintTop_toTopOf="@+id/UserHeight_Adachi"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/edit_UserGoalMade_Adachi"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginEnd="172dp"
        android:gravity="center_vertical"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="@+id/UserGoalMade_Adachi"
        app:layout_constraintEnd_toEndOf="@+id/UserGoalMade_Adachi"
        app:layout_constraintTop_toTopOf="@+id/UserGoalMade_Adachi"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/edit_UserGoalPeriod_Adachi"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="144dp"
        android:textSize="25dp"
        android:gravity="center_vertical"

        app:layout_constraintBottom_toBottomOf="@+id/UserGoalPeriod_Adachi"
        app:layout_constraintEnd_toEndOf="@+id/UserGoalPeriod_Adachi"
        app:layout_constraintTop_toTopOf="@+id/UserGoalPeriod_Adachi"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>