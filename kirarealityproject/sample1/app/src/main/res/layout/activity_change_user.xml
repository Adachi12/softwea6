<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckUserInfo"
    >

    <TextView
        android:id="@+id/Zentai_changeUser_OCE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoSizeTextType="uniform"
        android:background="#B4B4B4"
        android:gravity="center_horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView android:id="@+id/DisplayChangeUserInfo_OCE"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:text="ユーザ情報変更"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView android:id="@+id/UserSex_OCE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:background="@color/white"
        android:text="性別: "

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />


    <TextView
        android:id="@+id/Userhight_OCE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:background="@color/white"
        android:text="身長:"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.223" />

    <TextView
        android:id="@+id/Userwidth_OCE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:background="@color/white"
        android:text="体重:"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.296" />

    <TextView
        android:id="@+id/UserGoalwidth_OCE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:background="@color/white"
        android:text="目標体重:"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528" />

    <TextView
        android:id="@+id/UserGoalPeriod_OCE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:background="@color/white"
        android:text="目標期間: 残り           日"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <Button
        android:id="@+id/button_ChangeUserInfo_OCE5"
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:autoSizeTextType="uniform"
        android:text="ユーザ情報を変更する"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <EditText android:id="@+id/edit_UserSex_OCE"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintBottom_toBottomOf="@+id/UserSex_OCE"
        app:layout_constraintEnd_toEndOf="@+id/UserSex_OCE"
        app:layout_constraintTop_toTopOf="@+id/UserSex_OCE" />

    <EditText
        android:id="@+id/edit_Userhight_OCE"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintBottom_toBottomOf="@+id/Userhight_OCE"
        app:layout_constraintEnd_toEndOf="@+id/Userhight_OCE"
        app:layout_constraintTop_toTopOf="@+id/Userhight_OCE" />

    <EditText
        android:id="@+id/edit_Userwidth_OCE"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintBottom_toBottomOf="@+id/Userwidth_OCE"
        app:layout_constraintEnd_toEndOf="@+id/Userwidth_OCE"
        app:layout_constraintTop_toTopOf="@+id/Userwidth_OCE" />

    <EditText
        android:id="@+id/edit_UserGoalwidth_OCE"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintBottom_toBottomOf="@+id/UserGoalwidth_OCE"
        app:layout_constraintEnd_toEndOf="@+id/UserGoalwidth_OCE"
        app:layout_constraintTop_toTopOf="@+id/UserGoalwidth_OCE" />

    <EditText
        android:id="@+id/edit_UserGoalPeriod_OCE"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:inputType="number"

        app:layout_constraintBottom_toBottomOf="@+id/UserGoalPeriod_OCE"
        app:layout_constraintEnd_toEndOf="@+id/UserGoalPeriod_OCE"
        app:layout_constraintTop_toTopOf="@+id/UserGoalPeriod_OCE" />


</androidx.constraintlayout.widget.ConstraintLayout>