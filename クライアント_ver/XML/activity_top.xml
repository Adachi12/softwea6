<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".TopActivity">

    <ImageView
        android:id="@+id/imageView13_top"
        android:layout_width="408dp"
        android:layout_height="223dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574"
        app:srcCompat="@drawable/newregijog" />

    <TextView
        android:id="@+id/textView4_top"
        android:layout_width="377dp"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:text="本アプリではユーザ情報の登録が必要です。\nアカウント登録がお済みの方は、ログインをタップしてログインの手続きをしてください。\nアカウント登録がお済みでない方は、アカウント\n登録ボタンをタップし、情報を登録してください。"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1_top"
        android:layout_width="197dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="?attr/colorControlHighlight"
        android:text="アカウント登録"
        android:textColor="@color/design_default_color_background"
        android:background="#ffff4444"
        app:layout_constraintBottom_toTopOf="@+id/button2_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4_top"
        app:layout_constraintVertical_bias="0.961"
        app:strokeColor="@color/white" />

    <Button
        android:id="@+id/button2_top"
        android:layout_width="194dp"
        android:layout_height="77dp"
        android:layout_marginTop="96dp"
        android:text="ログイン"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4_top" />

</androidx.constraintlayout.widget.ConstraintLayout>